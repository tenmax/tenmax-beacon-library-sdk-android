<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Section 1 -->
        <TextView
            android:id="@+id/title1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title_1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content1TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/main_content_1"
            android:textSize="14sp" />

        <!-- Section spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Section 2 -->
        <TextView
            android:id="@+id/title2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title_2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content2TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/main_content_2"
            android:textSize="14sp" />


        <!-- User data input area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/user_data_title"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:inputType="textEmailAddress"
                android:hint="@string/email_input_label"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <EditText
                android:id="@+id/phoneNumberEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:inputType="phone"
                android:hint="@string/phone_input_label"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/submit_button" />

        </LinearLayout>

        <!-- Section spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Section 3 -->
        <TextView
            android:id="@+id/title3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/main_title_3"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content3TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/main_content_3"
            android:textSize="14sp" />

        <!-- Bottom spacing to ensure content is not cut off -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

    </LinearLayout>

</ScrollView>
